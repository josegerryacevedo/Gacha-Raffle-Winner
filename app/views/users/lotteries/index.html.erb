<div class="container">
  <div id="carouselExampleIndicators" class="carousel slide" data-bs-ride="carousel">
    <div class="carousel-indicators">
      <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
      <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="1" aria-label="Slide 2"></button>
    </div>
    <div class="carousel-inner" style="height: 45vh">
      <div class="carousel-item active">
        <img src="/mostafa-meraji-xnvRp8UyKL0-unsplash.jpg" class="d-block w-100" alt="...">
      </div>
      <div class="carousel-item">
        <img src="/lucas-wesney-s-y2HJElONo-unsplash.jpg" class="d-block w-100" alt="...">
      </div>
    </div>
    <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="prev">
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="visually-hidden">Previous</span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="next">
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="visually-hidden">Next</span>
    </button>
  </div>
</div>

<div class=" text-light" style="height: 4vh;background-color: #000033"></div>
<section style="padding-bottom: 60px; padding-top: 10px">
  <div class="container overflow-hidden">
    <ul class="nav justify-content-start">
      <%= link_to "All", users_lotteries_path, class: 'nav-link text-info' %>
      <% @categories.each do |category| %>
        <li class="nav-item active">
          <%= link_to category.name, users_lotteries_path(category: category.name), class: "filter nav-link text-info" %>
        </li>
      <% end %>
    </ul>
    <br>
    <div class="container">
      <div class="row" style="font-family: Verdana">
        <% @items.each do |item| %>
          <div class="col-6 col-md-4 col-sm-6 d-flex align-self-stretch">
            <div class="card shadow-none mb-2 border-0 bg-light">
              <div class="card-body d-flex flex-column">
                <div class="h-100">
                  <%= link_to (image_tag item.image.url, class: 'd-block h-100 w-100' if item.image.present?), users_lottery_path(item) %>
                </div>
                <p style="font-size: 12px; width: auto">
                  <%= item.name %>
                </p>
                <div class="progress">
                  <div class="progress-bar" role="progressbar" aria-label="Example with label" style="width: 25%;" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100">25%</div>
                </div>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</section>
<%= render "layouts/nav" %>