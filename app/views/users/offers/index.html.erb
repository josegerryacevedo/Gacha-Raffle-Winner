<div class="container">
  <div id="carouselExampleIndicators" class="carousel slide" data-bs-ride="carousel">
    <div class="carousel-indicators">
      <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
      <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="1" aria-label="Slide 2"></button>
    </div>
    <div class="carousel-inner" style="height: 45vh">
      <div class="carousel-item active">
        <img src="/mostafa-meraji-xnvRp8UyKL0-unsplash.jpg" class="d-block w-100" alt="...">
      </div>
      <div class="carousel-item">
        <img src="/lucas-wesney-s-y2HJElONo-unsplash.jpg" class="d-block w-100" alt="...">
      </div>
    </div>
    <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="prev">
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="visually-hidden">Previous</span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="next">
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="visually-hidden">Next</span>
    </button>
  </div>
</div>

<section class="text-light" style="height: 4vh;background-color: #000033">
  <div>
    <div class="container">
      <div class="ticker">
        <div class="title"></div>
        <div class="news">
          <marquee class="news-content">
            <h4>Hello World</h4>
          </marquee>
        </div>
      </div>
    </div>
  </div>
</section>

<section style="height: 100vh; padding-top: 5px">
  <%= render 'layouts/errors_message' %>
  <div class="container overflow-hidden">
    <div class="row">
      <% @offers.each do |offer| %>
        <div class="col-6">
          <div class="border bg-light" data-bs-toggle="modal" data-bs-target="#staticBackdrop<%= offer.id %>">
            <%= image_tag offer.image.url, class: 'd-block w-100' %>
          </div>
          <div class="modal fade" id="staticBackdrop<%= offer.id %>" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered modal-lg text-center">
              <div class="modal-content">
                <div class="modal-body">
                  Do you want to pay â‚±<%= offer.amount %> and get <%= offer.coin %>coins?
                </div>
                <div class="modal-footer">
                  <%= link_to "Order Now!", users_offer_order_path(offer), class: 'btn btn-outline-info btn-sm', method: :post %>
                  <button type="button" class="btn btn-outline-secondary btn-sm" data-bs-dismiss="modal">Close</button>
                </div>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</section>
<%= render "layouts/nav" %>