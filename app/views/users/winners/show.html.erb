<!--Show Page-->
<div class="container" style="margin-top: 100px; height: 100vh">
  <div class="card border-0">
    <h5 class="card-header text-light" style="background-color: #000033">Claim Prize</h5>
    <div class="card-body m-3">
      <h3>Winning Bet</h3>
      <div>Serial Number: <%= @winner.bet.serial_number %></div>
      <div>Item Name: <%= @winner.item.name %></div>
      <div>Date Created: <%= @winner.created_at %></div>
      <div class="mt-3">
        <%= form_for @winner, url: users_winner_path(@winner), method: :patch do |f| %>
          <b>Select Address:</b>
          <% current_user.addresses.each do |address| %>
            <div class="card mt-1">
              <div class="card-body">
                <div class="row mt-2">
                  <div class="col d-flex ms-2" style="max-width: 40px">
                    <%= f.radio_button :address, address.id, checked: address.is_default %>
                  </div>
                  <div class="col">
                    <span class="badge rounded-pill text-light mb-1" style="background-color: #000033"> <%= address.genre %></span>
                    <span class="badge rounded-pill text-light mb-1" style="background-color: #000033"><%= :Default if address.is_default %></span>
                    <div>
                      <div class="fw-bold d-inline" style="display:inline">Name:</div>
                      <%= address.name %>
                    </div>
                    <div>
                      <div class="fw-bold d-inline" style="display:inline">Address:</div>
                      <%= "#{address.street_address}, #{address.barangay.name}, #{address.city.name}, #{address.province.name}, #{address.region.region_name}" %>
                    </div>
                    <div>
                      <div class="fw-bold d-inline" style="display:inline">Phone number:</div>
                      <%= address.phone_number %>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          <% end %>
          <div class="row mt-1">
            <div class="col-sm-2">
              <%= f.submit "Update", class: 'border btn form-control text-light', style: 'background-color: #000033' %>
            </div>
            <div class="col-sm-2">
              <%= link_to "Back", users_profile_path, class: 'border btn form-control text-light', style: 'background-color: #000033' %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
</div>
<%= render "layouts/nav" %>