<div class="col py-3">
  <div class="card" style="background-color: #000033">
    <h1 style="font-family: Courier" class="text-light text-center"> Category List</h1>
  </div>
  <div>
    <br>
    <%= render 'layouts/errors_message' %>
    <table class="table text-center table-bordered ">
      <thead class="thead text-light bg-dark" style="font-family: 'Comic Sans MS'">
      <tr>
        <th scope="col">Category Name</th>
        <th scope="col">Actions</th>
      </tr>
      </thead>
      <tbody>
      <% if @categories.blank? %>
        <h2>No Category to show</h2>
      <% end %>
      <% @categories.each do |category| %>
        <tr>
          <td><%= category.name %></td>
          <td>
            <%= link_to 'Edit', edit_admins_category_path(category), class: 'btn btn-info' %>
            <%= link_to 'Delete', admins_category_path(category), method: :delete, data: { confirm: "Are you sure?" }, class: 'btn btn-danger' %>
          </td>
        </tr>
      <% end %>
      </tbody>
    </table>
    <%= link_to 'Create', new_admins_category_path, class: 'btn btn-info' %>
  </div>
</div>